---
import type { HTMLAttributes } from "astro/types";

type HeadingOptions = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";

interface HeadingProps extends HTMLAttributes<HeadingOptions> {
  size: keyof typeof textSizes;
  tagName: HeadingOptions;
  classes?: string;
}

const { tagName, size, classes, ...rest } = Astro.props as HeadingProps;
const Tag = tagName || 'div';
const textSizes = {
  xs: 'text-xs',
  sm: 'text-sm',
  base: 'text-base',
  lg: 'text-lg',
  xl: 'text-xl',
  '2xl': 'text-2xl',
  '3xl': 'text-3xl',
  '4xl': 'text-4xl',
  '5xl': 'text-5xl',
  '6xl': 'text-6xl',
  '7xl': 'text-7xl',
  '8xl': 'text-8xl',
  '9xl': 'text-9xl',
};
---

<Tag class:list={['heading', textSizes[size], classes]} {...rest}>
  <slot />
</Tag>

